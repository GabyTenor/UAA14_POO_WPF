<Window x:Class="ExSimplifieSerpent.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExSimplifieSerpent"
        mc:Ignorable="d"
        Background="#FF5DB188"
        FontSize ="30"
        Title="MainWindow" Height="720" Width="800">
    <Grid x:Name="grdMain">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="title" Text="SERPENTS ET ECHELLES" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>

        <StackPanel Background="#FFC38F3D" Grid.Column="1" Grid.Row="1">
            <TextBlock Text="Joueur 1"></TextBlock>
            <WrapPanel Orientation="Horizontal">
                <TextBlock Text="Dé :"></TextBlock>
                <TextBlock x:Name="face" Text=" x"></TextBlock>
            </WrapPanel>
            <Button x:Name="play" Content="JOUER"></Button>
            <TextBlock x:Name="victoire"></TextBlock>
        </StackPanel>
    </Grid>
</Window>
